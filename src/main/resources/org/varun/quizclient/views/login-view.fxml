<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.varun.quizclient.controller.LoginController">
    <left>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="110.0" fitWidth="222.0" layoutX="26.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/QuizLogo.png" />
                    </image></ImageView>
            </children>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="titleLabel" layoutX="123.0" layoutY="55.0" text="Quiz Time" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <Label fx:id="errorLabel" alignment="CENTER" layoutX="150.0" layoutY="91.0" textAlignment="CENTER" textFill="RED" />
                <TextField fx:id="username" layoutX="100.0" layoutY="110.0" prefHeight="27.0" prefWidth="199.0" promptText="Username" />
                <PasswordField fx:id="password" layoutX="100.0" layoutY="144.0" prefHeight="27.0" prefWidth="200.0" promptText="Password" />
                <Button fx:id="logInButton" layoutX="174.0" layoutY="186.0" mnemonicParsing="false" onAction="#onLoginClick" style="-fx-background-color: #3344AA;" text="Login" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font></Button>
                <VBox alignment="CENTER" layoutX="77.0" layoutY="221.0" prefHeight="50.0" prefWidth="247.0">
                    <children>
                        <Hyperlink text="Forgot Password?" textAlignment="CENTER" underline="true" />
                        <Hyperlink text="Don't have an Account? Create One" textAlignment="CENTER" underline="true" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
